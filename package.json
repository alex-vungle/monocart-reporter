{
    "name": "monocart-reporter",
    "version": "1.3.3",
    "description": "A playwright test reporter. Shows suites/cases/steps with tree style, console logs, fuzzy search, markdown annotations, custom columns/formatters/data collection visitors, send email, testrail integration.",
    "main": "lib/index.js",
    "scripts": {
        "test": "node ./scripts/link.js && npx playwright test --config=tests/playwright.config.js",
        "build": "sf lint && sf b -p",
        "dev": "sf d",
        "patch": "npm run build && sf publish patch -r",
        "pack": "sf pack -o docs -q v={version} && nmls -p"
    },
    "workspaces": [
        "packages/*"
    ],
    "files": [
        "lib"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cenfun/monocart-reporter.git"
    },
    "dependencies": {
        "@babel/code-frame": "^7.18.6",
        "@babel/parser": "^7.21.3",
        "console-grid": "^2.0.1",
        "eight-colors": "^1.0.2",
        "lz-utils": "^1.0.5",
        "nodemailer": "^6.9.1",
        "stack-utils": "^2.0.6"
    },
    "devDependencies": {
        "@playwright/test": "^1.31.2",
        "ansi-to-html": "^0.7.2",
        "eslint": "^8.36.0",
        "eslint-config-plus": "^1.0.6",
        "eslint-plugin-html": "^7.1.0",
        "eslint-plugin-vue": "^9.9.0",
        "fuzzy": "^0.1.3",
        "github-markdown-css": "^5.2.0",
        "marked": "^4.2.12",
        "playwright": "^1.31.2",
        "stylelint": "^15.2.0",
        "stylelint-config-plus": "^1.0.2",
        "testrail-api": "^1.3.6",
        "turbogrid": "^3.0.5",
        "vine-ui": "^3.1.2"
    }
}