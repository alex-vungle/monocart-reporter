{
    "name": "monocart-reporter",
    "version": "1.6.5",
    "description": "A playwright test reporter. Shows suites/cases/steps with tree style, markdown annotations, custom columns/formatters/data collection visitors, console logs, style tags, send email, testrail integration.",
    "main": "lib/index.js",
    "scripts": {
        "test": "node ./scripts/link.js && npx playwright test -c tests",
        "build": "sf lint && sf b -p",
        "dev": "sf d -w .temp/monocart/index.json",
        "patch": "npm run build && sf publish patch -r",
        "pack": "sf pack -o docs -q v={version} && nmls -p"
    },
    "workspaces": [
        "packages/*"
    ],
    "files": [
        "lib"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cenfun/monocart-reporter.git"
    },
    "dependencies": {
        "@babel/code-frame": "^7.18.6",
        "@babel/parser": "^7.21.3",
        "console-grid": "^2.0.1",
        "eight-colors": "^1.0.3",
        "lz-utils": "^1.0.6",
        "nodemailer": "^6.9.1",
        "stack-utils": "^2.0.6"
    },
    "devDependencies": {
        "@playwright/test": "^1.32.1",
        "@slack/web-api": "^6.8.1",
        "@slack/webhook": "^6.1.0",
        "ansi-to-html": "^0.7.2",
        "async-tick": "^1.0.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.37.0",
        "eslint-config-plus": "^1.0.6",
        "eslint-plugin-html": "^7.1.0",
        "eslint-plugin-vue": "^9.10.0",
        "file-saver": "^2.0.5",
        "fps-detector": "^1.0.3",
        "github-markdown-css": "^5.2.0",
        "marked": "^4.3.0",
        "playwright": "^1.32.1",
        "stylelint": "^15.3.0",
        "stylelint-config-plus": "^1.0.2",
        "testrail-api": "^1.3.6",
        "turbogrid": "^3.0.7",
        "vine-ui": "^3.1.5"
    }
}